{
    "compilerOptions": {
        "allowJs": true,
        "alwaysStrict": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "noEmit": true,
        "lib": [
            "ES2023"
        ],
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "pretty": true,
        "skipLibCheck": true,
        "strict": false,
    },
    "ts-node": {
        "transpileOnly": true,
        "esm": true,
        "compilerOptions": {
            "module": "NodeNext",
            "esModuleInterop": true,
            "moduleResolution": "NodeNext",
            "lib": [
                "DOM",
                "ESNext"
            ]
        }
    }
}